<MyGrid>

    nameTh: nameOO
    emailTh: emailOO

    GridLayout:
        cols:1
        size: root.width - 200, root.height - 200
        pos: 100,100

        GridLayout:
            cols:2

            Label:
                text: "Name: "

            TextInput:
                id: nameOO
                multiline: False

            Label:
                text: "Email: "

            TextInput:
                id: emailOO
                multiline: False

        Button:
            text: "Submit"
            on_press: root.btn()
